html 
  head 
    block headTitle
      title 
        | #{page.title}
    block headMetaMain
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge')
      meta(name='viewport', content='width=device-width, initial-scale=1')
    block headMeta
      meta(name='description', content='Home page')
      meta(name='author', content='sb-admin')
    block headStylesMain
      link(rel='stylesheet', href='/public/css/styles.css')
      link(rel='stylesheet', href='/public/css/main.css')
      
    block headStyles
    block headScriptsMain
      script(src='https://use.fontawesome.com/releases/v6.1.0/js/all.js', crossorigin="anonymous")
    block headScripts
  
  block body
    body.sb-nav-fixed
      include menus/nav-menu.pug
      
      
      div#layoutSidenav
        include menus/main-menu.pug
            
        div#layoutSidenav_content
          main
            div.container-fluid.px-4
              block messageAlert
                include parts/message.pug
              include parts/content.pug

              include parts/footer.pug

      block footerScriptsMain
          script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js', crossorigin="anonymous")
          script(src='/public/js/scripts.js')
      block footerScripts
        

