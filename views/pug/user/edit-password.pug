extends ../base.pug

block headMeta
  meta(name='description', content='Edit password')
  meta(name='author', content='Eli Serra')

block pageTitle

block pageContent
  div#layoutAuthentication
    div#layoutAuthentication_content
      main 
        div.container
          div.row.justify-content-center
            div.col-lg-5
              div.card.shadow-lg.border-0.rounded-lg.mt-5
                div.card-header
                  h3.text-center.font-weight-light.my-4 Edit Password
                div.card-body
                  if errors 
                    - var errorTmp = false
                  form(action='/user/edit-password' method='post')
                    div.form-floating.mb-3
                      - errorTmp = errors && errors.password ? errors.password : false
                      input(class=errorTmp ? "form-control is-invalid" : "form-control" id="password" name="password" type="password" placeholder="Password" value= form && form.password ? form.password : '' required)
                      label(for="password") Actual Password
                      if errorTmp.msg
                        div.invalid-feedback
                          | #{errorTmp.msg}
                    div.form-floating.mb-3
                      - errorTmp = errors && errors.newPassword ? errors.newPassword : false
                      input(class=errorTmp ? "form-control is-invalid" : "form-control" id="newPassword" name="newPassword" type="password" placeholder="New Password" value= form && form.newPassword ? form.newPassword : '' required)
                      label(for="newPassword") New Password
                      if errorTmp.msg
                        div.invalid-feedback
                          | #{errorTmp.msg}
                    div.form-floating.mb-3
                      - errorTmp = errors && errors.passwordControl ? errors.passwordControl : false
                      input(class=errorTmp ? "form-control is-invalid" : "form-control" id="passwordControl" name="passwordControl" type="password" placeholder="New Password" value= form && form.passwordControl ? form.passwordControl : '' required)
                      label(for="passwordControl") Confirm Password
                      if errorTmp.msg
                        div.invalid-feedback
                          | #{errorTmp.msg}
                    div.d-flex.align-items-center.justify-content-between.mt-4.mb-0
                      button(class="btn btn-primary" role="button" type="submit") Change my password
                      input(id="_id" name="_id" type="hidden" value= user && user._id ? user._id : '')
                div.card-footer.text-center.py-3
                  div.small
                    a(href="/profile") View profile
